<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Dragon.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Dragon.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/Images/DragonFlying.png"
        Title="Dragon Game"
        WindowState="Maximized">
       
        
        <Grid Row="2">
                <Image Stretch="UniformToFill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="../../../Assets/Images/Castle.jpg"></Image>
                <Canvas Width="100" Height="100">
                        <Image Name="Character" Canvas.Top="140" Width="1000" Height="500" Source="../../../Assets/Images/DragonFlying.png"></Image>
                </Canvas>
        </Grid>
        
</Window>
